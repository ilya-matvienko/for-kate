form([formGroup]="form", (keyup)="search()")
  input(type="text", formControlName="searchCompany", placeholder="Enter company information for searching")

div
  button(type="button", (click)="addCompany()") {{ 'Add Company' }}

div
  p Company
  table
    tr
      th Name Company
      th CEO
      th Phone
      th Email
      th Adress
      th Passport
    tr(*ngFor="let item of list", (click)="select(item)")
      td {{ item.name }}
      td {{ item.ceo }}
      td {{ item.phone }}
      td {{ item.email }}
      td {{ item.address }}
      td {{ item.passport }}
